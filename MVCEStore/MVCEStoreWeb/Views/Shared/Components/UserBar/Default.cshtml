@if (ViewData["user"] == null)
{
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Login">
            <i class="fa fa-sign-in-alt"></i>
            Kullanıcı Girişi
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Register">
            <i class="fa fa-user-plus"></i>
            Yeni Üyelik
        </a>
    </li>
}
else
{
    var user = ViewData["user"] as User;
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Hoşgeldiniz Sn. <b>@user.Name</b>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" asp-controller="Account" asp-action="Orders">
                <i class="fa fa-shopping-basket"></i>
                Siparişlerim
                <span class="ml-2 badge badge-success">@user.Orders.Count(p => p.OrderStatus == OrderStatus.New).ToString("n0")</span>
            </a>
            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                <i class="fa fa-wrench"></i>
                Profil Ayarlarım
            </a>
        </div>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-controller="Account" asp-action="Logout">
            <i class="fa fa-power-off"></i>
            Çıkış
        </a>
    </li>

}
