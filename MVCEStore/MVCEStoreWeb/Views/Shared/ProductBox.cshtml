@model Product
<div class="card">
    <a asp-route="product" asp-route-id="@Model.Id" asp-route-name="@Model.Name.ToSafeUrlString()">
        <img src="@Model.Picture" class="card-img-top" alt="@Model.Name">
    </a>
    <div class="card-body">
        <h5 class="card-title text-truncate">
            @Model.Name
        </h5>
        <div style="height: 90px; overflow: hidden;">
            <p class="card-text">
                @if (Model.Discount > 0)
                {
                    <div class="text-muted" style="text-decoration: line-through">
                        @Model.Price.ToString("c2")
                    </div>
                    <div class="text-success h5">
                        @Model.DiscountedPrice.ToString("c2")
                    </div>
                }
                else
                {
                    <div class="text-success h5">
                        @Model.Price.ToString("c2")
                    </div>
                }
            </p>
        </div>
        <div class="d-flex justify-content-center">
            <a class="btn btn-link" asp-route="product" asp-route-id="@Model.Id" asp-route-name="@Model.Name.ToSafeUrlString()">
                <i class="fa fa-search"></i>
            </a>
            <a class="btn btn-link" asp-controller="Home" asp-action="AddToCart" asp-route-id="@Model.Id">
                <i class="fa fa-shopping-cart"></i>
            </a>
        </div>
    </div>
</div>