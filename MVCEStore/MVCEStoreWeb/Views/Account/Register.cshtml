@model RegisterViewModel
@{
    ViewData["Title"] = "Yeni Üyelik";
}
<form asp-action="Register" novalidate>
    @if (!ViewContext.ModelState.IsValid)
    {
        @Html.ValidationSummary()
    }
    <div class="form-row">
        <div class="col-12 col-md-6 form-group">
            <label asp-for="UserName"></label>
            <input asp-for="UserName" class="form-control" autocomplete="new-password" />
            <span asp-validation-for="UserName"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-md-6 form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-md-6 form-group">
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Password"></span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-md-6 form-group">
            <div class="form-group">
                <label asp-for="PasswordVerify"></label>
                <input asp-for="PasswordVerify" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="PasswordVerify"></span>
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col-12 col-md-6 form-group">
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Genders>()" class="custom-select">
                    <option value="" selected disabled>Seçiniz...</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fa fa-user"></i> Kayıt</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
