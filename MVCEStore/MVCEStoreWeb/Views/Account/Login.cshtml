@model LoginViewModel
@{
    Layout = "_LayoutEmpty";
}
<div class="d-flex h-100 flex-column align-items-center justify-content-center">
    <form asp-controller="Account" asp-action="Login" method="post">
        @Html.HiddenFor(p => p.ReturnUrl)
        <div class="card shadow mb-2" style="min-width: 320px;">
            <div class="card-body">
                <div class="text-center">
                    <i class="fa fa-user-circle fa-5x text-secondary"></i>
                    <div class="h3 text-secondary">Kullanıcı Girişi</div>
                </div>
                @if (!ViewContext.ModelState.IsValid)
                {
                    @Html.ValidationSummary()
                }
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-group form-check">
                    <input asp-for="IsPersistent" class="form-check-input" />
                    <label asp-for="IsPersistent" class="form-check-label"></label>
                </div>
                <button type="submit" class="btn btn-block btn-primary"><i class="fa fa-sign-in-alt"></i> Giriş</button>
                <a href="javascript:history.back()" class="btn btn-block btn-link text-secondary">İptal</a>
                <hr />
                <div class="text-center">
                    <a asp-controller="Account" asp-action="Register">Yeni Üyelik</a>
                    <span class="mx-4">&bull;</span>
                    <a asp-controller="Account" asp-action="ResetPasswordForm">Parolamı Yenile</a>
                </div>
            </div>
        </div>
        <div class="text-center small p-2">
            <strong>MVCEStore</strong> - &copy;@DateTime.Today.Year - Tüm hakları saklıdır.
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}